{
    "compilerOptions": {
        "target": "ES2017",                          
        "module": "commonjs",                    
        "lib": ["es6", "dom"],                     
        "allowJs": true,
        "outDir": "./build",                          
        "rootDir": ".",
        "strict": true,
        "skipLibCheck": true,         
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        },
}